{# templates/user/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(to right, #7b4397, #dc2430);
            color: white;
        }
        .user-details {
            background-color: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>User Details</h1>

    <div class="user-details">
        <p><strong>Id:</strong> {{ user.id }}</p>
        <p><strong>Email:</strong> {{ user.email }}</p>
        <p><strong>Roles:</strong> {{ user.roles | join(', ') }}</p>
    </div>

    <a href="{{ path('user_index') }}" class="btn btn-secondary">Back to list</a>
    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning">Edit</a>

    <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" style="display:inline-block">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
        <button class="btn btn-danger">Delete</button>
    </form>
{% endblock %}
